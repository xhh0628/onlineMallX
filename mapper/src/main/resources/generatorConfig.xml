<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="mySql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
            <property name="beginningDelimiter" value=""/>
            <property name="endingDelimiter" value=""/>
            <!--配置GeneralMapper-->

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <!--生成的dao接口默认继承generalDao通用（泛型）接口-->
            <property name="mappers" value=""/>
        </plugin>

        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/online_mall"
                        userId="root"
                        password="root">
        </jdbcConnection>


        <javaTypeResolver>
            <!-- This property is used to specify whether MyBatis Generator should
             force the use of java.math.BigDecimal for DECIMAL and NUMERIC fields, -->
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--手动修改配置位置-->
        <!-- 指定javaBean的生成策略  文件夹自己定义-->
        <javaModelGenerator targetPackage="com.xhh.onlineMall.entity"
                            targetProject="src/main/java">

        </javaModelGenerator>

        <!-- sqlMapGenerator：sql映射生成策略： -->
        <sqlMapGenerator targetPackage="/"  targetProject="src/main/resources/mappers" />

        <!-- javaClientGenerator:指定mapper接口所在的位置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.xhh.onlineMall.dao"
                             targetProject="src/main/java">
        </javaClientGenerator>

        <!-- 指定要逆向分析哪些表：根据表要创建javaBean -->
        <table tableName="%"></table><!--所有表都生成-->

    </context>
</generatorConfiguration>